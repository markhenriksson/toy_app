<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
	<% if @user.microposts.count >= 1 %>
		<strong>First micropost:</strong>
		<%= @user.microposts.first.content %>
	<% else %>
		<strong>No microposts from this user yet.</strong>
	<% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
